{
	"name": "voiceparty-lol",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"packageManager": "pnpm@10.24.0",
	"scripts": {
		"dev": "concurrently \"pnpm dev:frontend\" \"pnpm dev:backend\"",
		"dev:frontend": "vite",
		"dev:backend": "wrangler pages dev http://127.0.0.1:5173 --kv VC_SESSIONS",
		"build": "tsc -b && vite build",
		"deploy": "pnpm build && wrangler pages deploy dist",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"check:ci": "biome ci . --error-on-warnings",
		"format": "biome format --write .",
		"preview": "vite preview",
		"test": "vitest run",
		"test:watch": "vitest",
		"type-check": "tsc --noEmit",
		"gen:api": "tsp compile client/typespec && orval --config client/orval.config.ts",
		"gen:all": "python3 generate_typespec.py && pnpm gen:api"
	},
	"dependencies": {
		"@cloudflare/realtimekit": "^1.2.1",
		"@cloudflare/realtimekit-react": "^1.2.1",
		"@emotion/react": "^11.14.0",
		"@emotion/styled": "^11.14.1",
		"@fontsource/roboto": "^5.2.9",
		"@mui/icons-material": "^6.1.10",
		"@mui/material": "^6.1.10",
		"axios": "^1.13.2",
		"hono": "^4.11.1",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"react-router-dom": "^6.28.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.9",
		"@cloudflare/workers-types": "^4.20251213.0",
		"@eslint/js": "^9.39.1",
		"@testing-library/dom": "^10.4.1",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.1",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.10.1",
		"@types/react": "^19.2.5",
		"@types/react-dom": "^19.2.3",
		"@typespec/compiler": "^1.7.1",
		"@typespec/http": "^1.7.0",
		"@typespec/openapi3": "^1.7.0",
		"@typespec/rest": "^0.77.0",
		"@vitejs/plugin-react": "^5.1.1",
		"concurrently": "^9.2.1",
		"eslint": "^9.39.1",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-react-refresh": "^0.4.24",
		"globals": "^16.5.0",
		"jsdom": "^27.3.0",
		"lefthook": "^2.0.12",
		"orval": "^7.17.0",
		"typescript": "~5.9.3",
		"typescript-eslint": "^8.46.4",
		"vite": "^7.2.4",
		"vitest": "^4.0.15",
		"wrangler": "^4.54.0"
	}
}
